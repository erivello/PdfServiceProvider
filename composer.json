{
    "name": "erivello/pdf-service-provider",
    "description": "A Pdf service provider for Silex, based on ZendPdf library.",
    "keywords": ["silex", "zend", "pdf"],
    "license": "MIT",
    "minimum-stability" : "dev",
    "authors": [
        {
            "name": "Edoardo Rivello",
            "email": "edoardo.rivello@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.zendframework.com/"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "zendframework/zendpdf": "2.0.*",
        "silex/silex": "1.0.*"
    },
    "suggest": {
        "silex/silex": "for the integration with your silex application"
    },
    "autoload": {
        "psr-0": { 
            "Erivello": "src"
        }
    }
}
